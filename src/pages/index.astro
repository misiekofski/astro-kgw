<style>
	.hero {
		text-align: center;
		padding: 2rem 0 3rem;
		background: linear-gradient(135deg, var(--kgw-green-light) 0%, var(--kgw-cream) 100%);
		border-radius: 16px;
		margin-bottom: 2rem;
	}

	.hero h1 {
		font-size: 2.5rem;
		color: var(--kgw-green-dark);
		margin-bottom: 0.25rem;
	}

	.subtitle {
		font-size: 1.3rem;
		color: var(--kgw-brown);
		margin-bottom: 1rem;
	}

	.tagline {
		font-size: 1.1rem;
		color: rgb(var(--gray-dark));
		font-style: italic;
	}

	.section {
		margin-bottom: 3rem;
		padding: 1.5rem;
		background: white;
		border-radius: 12px;
		box-shadow: 0 2px 8px rgba(0,0,0,0.05);
	}

	.section h2 {
		color: var(--kgw-green-dark);
		border-bottom: 3px solid var(--kgw-orange);
		padding-bottom: 0.5rem;
		margin-bottom: 1rem;
	}

	.highlight {
		background: linear-gradient(135deg, var(--kgw-cream) 0%, #fff 100%);
		border: 2px solid var(--kgw-orange);
	}

	.join-steps {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1.5rem;
		margin: 2rem 0;
	}

	.step {
		text-align: center;
		padding: 1.5rem;
		background: white;
		border-radius: 12px;
		box-shadow: 0 2px 8px rgba(0,0,0,0.08);
	}

	.step-number {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		background: var(--kgw-green);
		color: white;
		border-radius: 50%;
		font-weight: bold;
		font-size: 1.2rem;
		margin-bottom: 0.75rem;
	}

	.step h3 {
		color: var(--kgw-green-dark);
		font-size: 1.1rem;
		margin-bottom: 0.5rem;
	}

	.step p {
		font-size: 0.95rem;
		color: rgb(var(--gray));
		margin: 0;
	}

	.membership-info {
		text-align: center;
		padding: 1rem;
		background: white;
		border-radius: 8px;
		margin-top: 1rem;
	}

	.statute-info {
		background: rgb(var(--gray-light));
		padding: 1rem;
		border-radius: 8px;
		margin: 1rem 0;
	}

	.btn {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: var(--kgw-green);
		color: white;
		text-decoration: none;
		border-radius: 8px;
		font-weight: bold;
		transition: background 0.2s;
	}

	.btn:hover {
		background: var(--kgw-green-dark);
		color: white;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 1.5rem;
	}

	.contact-card {
		background: rgb(var(--gray-light));
		padding: 1.25rem;
		border-radius: 10px;
	}

	.contact-card h3 {
		color: var(--kgw-green-dark);
		font-size: 1rem;
		margin-bottom: 0.75rem;
		border-bottom: 2px solid var(--kgw-orange);
		padding-bottom: 0.25rem;
	}

	.contact-card p {
		margin: 0.25rem 0;
		font-size: 0.95rem;
	}

	@media (max-width: 720px) {
		.hero h1 {
			font-size: 1.8rem;
		}

		.join-steps {
			grid-template-columns: 1fr;
		}
	}
</style>

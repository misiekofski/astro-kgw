<style>
	footer {
		padding: 2em 1em 3em 1em;
		background: var(--kgw-green-dark);
		color: white;
		text-align: center;
	}

	.footer-content {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 3rem;
		flex-wrap: wrap;
		margin-bottom: 1.5rem;
	}

	.footer-info p {
		margin: 0.25rem 0;
	}

	.kgw-name {
		font-weight: bold;
		font-size: 1.1rem;
	}

	.footer-links {
		display: flex;
		gap: 1.5rem;
	}

	.footer-links a {
		color: white;
		text-decoration: none;
		opacity: 0.9;
		transition: opacity 0.2s;
	}

	.footer-links a:hover {
		opacity: 1;
		text-decoration: underline;
	}

	.copyright {
		font-size: 0.85rem;
		opacity: 0.8;
		margin: 0;
	}

	.social-links {
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	.social-links a {
		color: white;
		opacity: 0.9;
		transition: opacity 0.2s, transform 0.2s;
		display: flex;
		align-items: center;
	}

	.social-links a:hover {
		opacity: 1;
		transform: scale(1.1);
	}

	@media (max-width: 720px) {
		.footer-content {
			flex-direction: column;
			gap: 1.5rem;
		}
	}
</style>
